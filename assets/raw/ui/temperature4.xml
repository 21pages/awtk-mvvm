<window anim_hint="htranslate" v-model="temperature">
  <label text="1" x="center" y="30" w="90%" h="40" text="temperature"/>
  <label text="1" x="center" y="middle" w="50%" h="40" v-data:text="{value}"/>
  <slider value="1" x="center" y="middle:40" w="80%" h="20" v-data:value="{value, Trigger=Explicit}"/>
  <button name="apply" text="Apply" x="center" y="bottom:10" w="80%" h="30" 
    v-on:click="{nothing, UpdateModel=True}"/>
</window>
